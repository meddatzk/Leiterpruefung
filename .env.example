# ==============================================
# LEITERPRÜFUNG - DOCKER UMGEBUNGSVARIABLEN
# ==============================================

# ----------------------------------------------
# DATENBANK KONFIGURATION
# ----------------------------------------------
DB_HOST=database
DB_PORT=3306
DB_NAME=leiterpruefung
DB_USER=leiter_user
DB_PASSWORD=secure_password_123
DB_ROOT_PASSWORD=root_password_456
DB_EXTERNAL_PORT=3306

# ----------------------------------------------
# LDAP KONFIGURATION
# ----------------------------------------------
LDAP_HOST=ldap.example.com
LDAP_PORT=389
LDAP_BASE_DN=dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=ldap_password

# ----------------------------------------------
# PHP KONFIGURATION
# ----------------------------------------------
PHP_TIMEZONE=Europe/Berlin
PHP_MEMORY_LIMIT=256M

# ----------------------------------------------
# APACHE KONFIGURATION
# ----------------------------------------------
APACHE_SERVER_NAME=localhost

# ----------------------------------------------
# ANWENDUNGS-KONFIGURATION
# ----------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_NAME="Leiterprüfung System"
APP_VERSION=1.0.0

# ----------------------------------------------
# SICHERHEIT
# ----------------------------------------------
APP_SECRET_KEY=your_secret_key_here_change_in_production
SESSION_LIFETIME=3600
COOKIE_SECURE=false
COOKIE_HTTPONLY=true

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=info
LOG_FILE=/var/log/leiter/application.log

# ----------------------------------------------
# E-MAIL KONFIGURATION (Optional)
# ----------------------------------------------
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=noreply@example.com
MAIL_PASSWORD=mail_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="Leiterprüfung System"

# ----------------------------------------------
# BACKUP KONFIGURATION (Optional)
# ----------------------------------------------
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
